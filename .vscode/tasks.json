{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pre-launch",
            "dependsOn": [
                "pip-restore",
                "redis-run"
            ]
        },
        {
            "label": "post-debug",
            "dependsOn": [
                "redis-stop"
            ]
        },
        {
            "label": "venv-ensure",
            "type": "shell",
            "command": "(cd ${workspaceFolder}/bot && test -d .venv || python3.12 -m venv .venv)",
            "presentation": { "reveal": "always" },
            "group": "build",
        },
        {
            "label": "pip-restore",
            "type": "shell",
            "command": "(cd ${workspaceFolder}/bot && source ./.venv/bin/activate && pip install --require-virtualenv -r requirements.txt)",
            "presentation": { "reveal": "always" },
            "group": "build",
            "dependsOn": [
                "venv-ensure",
            ]
        },
        {
            "label": "redis-run",
            "type": "shell",
            "command": "${workspaceFolder}/redis-run.sh",
            "presentation": { "reveal": "always" },
            "group": "build",
        },
        {
            "label": "redis-stop",
            "type": "shell",
            "command": "${workspaceFolder}/redis-stop.sh",
            "presentation": { "reveal": "never" },
            "group": "build",
        },
    ]
}